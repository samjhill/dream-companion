# Stripe Configuration
# Get these values from your Stripe Dashboard: https://dashboard.stripe.com/

# Your Stripe secret key (starts with 'sk_')
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Webhook endpoint secret (starts with 'whsec_')
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Subscription price IDs (create these in Stripe Dashboard > Products)
STRIPE_MONTHLY_PRICE_ID=price_monthly_price_id_here
STRIPE_QUARTERLY_PRICE_ID=price_quarterly_price_id_here
STRIPE_YEARLY_PRICE_ID=price_yearly_price_id_here

# Other configuration
FLASK_ENV=development
SECRET_KEY=your_flask_secret_key_here
S3_BUCKET_NAME=dream.storage
PREMIUM_TABLE_NAME=dream-companion-premium-users
